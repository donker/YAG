<?xml version="1.0" encoding="UTF-8"?>
<templateSettings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\Settings.xsd">
 <templateSetting>
  <key>theme</key>
  <valueType>dropdown</valueType>
  <values>
   <value>dark_rounded</value>
   <value>dark_square</value>
   <value>default</value>
   <value>facebook</value>
   <value>light_rounded</value>
   <value>light_square</value>
  </values>
  <defaultValue>light_rounded</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>animation_speed</key>
  <valueType>dropdown</valueType>
  <values>
   <value>fast</value>
   <value>normal</value>
   <value>slow</value>
  </values>
  <defaultValue>normal</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>slideshow</key>
  <valueType>string</valueType>
  <defaultValue>5000</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>autoplay_slideshow</key>
  <valueType>truefalse</valueType>
  <defaultValue>false</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>opacity</key>
  <valueType>string</valueType>
  <defaultValue>0.80</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>show_title</key>
  <valueType>truefalse</valueType>
  <defaultValue>true</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>allow_resize</key>
  <valueType>truefalse</valueType>
  <defaultValue>true</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>horizontal_padding</key>
  <valueType>integer</valueType>
  <defaultValue>20</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>autoplay</key>
  <valueType>truefalse</valueType>
  <defaultValue>true</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>modal</key>
  <valueType>truefalse</valueType>
  <defaultValue>false</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>overlay_gallery</key>
  <valueType>truefalse</valueType>
  <defaultValue>true</defaultValue>
 </templateSetting>
 <templateSetting>
  <key>keyboard_shortcuts</key>
  <valueType>truefalse</valueType>
  <defaultValue>true</defaultValue>
 </templateSetting>
</templateSettings>
